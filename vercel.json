{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/parse-rss",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/daily-purge",
      "schedule": "0 6 * * *"
    }
  ]
}